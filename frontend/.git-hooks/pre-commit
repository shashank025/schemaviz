#!/bin/sh
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACMR | sed 's| |\\ |g')

# run tests related to staged files
echo "[Pre-commit] Running Tests ..."
./node_modules/.bin/jest --bail --findRelatedTests $STAGED_FILES --passWithNoTests
JEST_EXIT_CODE=$?

# check jest exit code
if [ $JEST_EXIT_CODE -ne 0 ]; then
    echo "Cannot proceed commit due to one or more failed tests ğŸ™ğŸ™ğŸ™"
    exit 1
fi

# return 0-exit code
echo "ğŸ‰ All pre-commits passed. ğŸ”¥ğŸ”¥ğŸ”¥"
exit 0
